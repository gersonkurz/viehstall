<Page
    x:Class="viehstall.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:viehstall"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    >
    <Page.BottomAppBar>
        <AppBar>

            <StackPanel Orientation="Horizontal">
                <Button Style="{StaticResource OpenLocalAppBarButtonStyle}" Content="&#xE197;" Click="Button_Click"/>
            </StackPanel>
        </AppBar>
    </Page.BottomAppBar>
    <FlipView x:Name="MyFlipView" SelectionChanged="FlipView_SelectionChanged">
        <FlipView.ItemTemplate>
            <DataTemplate>
                <Grid>
                    <ScrollViewer HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  HorizontalScrollBarVisibility="Auto"
                                  VerticalScrollBarVisibility="Auto"
                                  DoubleTapped="ScrollViewer_DoubleTapped">
                        <Image Source="{Binding Picture}" 
                                    VerticalAlignment="Center" 
                                    HorizontalAlignment="Center"/>
                    </ScrollViewer>
                    <Border Background="#A5000000" Height="60" VerticalAlignment="Bottom">
                        <TextBlock Text="{Binding Description}" FontSize="24" Foreground="#CCFFFFFF" Padding="15,20"/>
                    </Border>
                </Grid>
            </DataTemplate>
        </FlipView.ItemTemplate>
    </FlipView>
</Page>
