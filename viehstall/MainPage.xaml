<Page
    x:Class="viehstall.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:viehstall"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    >
    <Page.BottomAppBar>
        <AppBar>

            <StackPanel Orientation="Horizontal">
                <Button Style="{StaticResource OpenLocalAppBarButtonStyle}" Content="&#xE197;" Click="Button_Click"/>
            </StackPanel>
        </AppBar>
    </Page.BottomAppBar>

    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <FlipView x:Name="MyFlipView" SelectionChanged="FlipView_SelectionChanged">

            <FlipView.ItemTemplate>
                <DataTemplate>
                    <ScrollViewer 
                        DoubleTapped="ScrollViewer_DoubleTapped"
                        ZoomMode="Enabled" 
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        MinZoomFactor="0.1"
                        MaxZoomFactor="5.0"
                        Margin="0"
                        VerticalScrollBarVisibility="Auto" 
                        HorizontalScrollBarVisibility="Auto">
                        <Grid>
                            <Image Source="{Binding Picture}" 
                                   Stretch="Uniform" 
                                   Width="{Binding ActualWidth, ElementName=Picture}"
                                   Height="{Binding ActualHeight, ElementName=Picture}"
                                   VerticalAlignment="Center" 
                                   HorizontalAlignment="Center"/>
                            <Border Background="#A5000000" Height="60" VerticalAlignment="Bottom">
                                <TextBlock Name="MyInfoText" Text="Hello, World" FontSize="24" Foreground="#CCFFFFFF" Padding="15,20"/>
                            </Border>
                        </Grid>
                        
                    </ScrollViewer>
                </DataTemplate>
            </FlipView.ItemTemplate>

        </FlipView>
    </Grid>


</Page>
